# nginx configuration

upstream app_server_djangoapp {
  # fail_timeout=0 means we always retry an upstream even if it failed
  # to return a good HTTP response (in case the Unicorn master nukes a
  # single worker for timing out).
 
  server unix:/webapps/hello_django/run/gunicorn.sock fail_timeout=0;

  # server localhost:8002 fail_timeout=0; 
}

server {
    listen 80;
    server_name django-tutorial.hauers.net;

    client_max_body_size 4G;

    access_log  /var/log/nginx/mysite-access.log;
    error_log  /var/log/nginx/mysite-error.log info;

    keepalive_timeout 5;

    # path for static files
    # root /var/www/mysite/static;

    location /static/ {
        alias   /webapps/hello_django/static/;
    }
    
    location /media/ {
        alias   /webapps/hello_django/media/;
    }
 
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        if (!-f $request_filename) {
            proxy_pass http://app_server_djangoapp;
            break;
        }
    }

    # Error pages
    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /webapps/hello_django/static/;
    }
}
